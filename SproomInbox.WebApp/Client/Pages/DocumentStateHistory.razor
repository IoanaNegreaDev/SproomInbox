@page "/documentstatehistory/{DocumentId}"

<h4 class="page-title">Status History for document @Document.Id</h4>

@if (Document.StateHistory != null)
{
    <p>There are @Document.StateHistory.Count status shanges</p>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Timestamp</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var statusChange in Document.StateHistory)
            {
                <tr>
                    <td>@statusChange.Timestamp</td>
                    <td>@statusChange.State</td>
                </tr>
            }
        </tbody>
    </table>
} 
else {
    <p><em>Loading...</em></p>
}

